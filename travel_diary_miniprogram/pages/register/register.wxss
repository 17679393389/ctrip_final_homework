.register{
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 25% 15%;
    background-image: linear-gradient(to top, #ffffff 80%, #feed97 100%);
}
.back{
    position: absolute;
    top: 8%;
    left: 20px;
}
.register-hello{
    font-size: 1.3rem;
    font-weight: 600;
    color: #3a3a3a;
}
.register-container{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 80%;
    margin-block: 50px;
}
.head-img{
    margin-bottom: 10px;
}
.register-container input,.gender{
    background-color: #f6f6f6;
    padding: 12px 20px;
    margin: 8px 0;
    border-radius: 20px;
    width: 100%;
    text-align: center;
}
.register-container .username{
    font-size: 1.2rem;
    font-weight: 600;
    color: #3a3a3a;
}
.gender-type{
    width: 100%;
    display: flex;
    justify-content: space-between;
}
.gender image{
    width: 20px;
    height: 20px;
    margin-right: 10px;
}
.register-bt{
    border-radius: 20px !important;
}