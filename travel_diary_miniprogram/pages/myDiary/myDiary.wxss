/* travel_diary_miniprogram/pages/myDiary/myDiary.wxss */
.tabs {
  display: flex;
  justify-content:space-around;
  align-items: center;
  margin-right: 15rpx;
  background-color: #fff;
  z-index: 1;
  /* margin-top: 20%; */
}
.my-info-bg{
   position: relative;
    width: 100%;
    height:400rpx;
    display: inline-flex;
    flex-direction: column;
    background-color: #fff0b5;
    
}
.my-info{
    position: absolute;
    bottom: 20rpx;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 30rpx !important;
    box-shadow: 5px 10rpx 10rpx 0px rgba(2, 20, 41, 0.1) !important;
}
.my-info-title{
  font-size: 40rpx !important;
}
.my-info-image{
  width: 100rpx !important;
  height: 100rpx !important;
}
.avter-share-container{
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.like-container{
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.like-container .label{
  color: #8a8a8a;
}
.tabs l-tabs {
  width: 90%;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.empty-page {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.empty-page image {
  width: 128rpx;
  height: 128rpx;
}

.empty-text {
  margin: 20rpx 0rpx;
  font-size: 28rpx;
}

.noteList {
  margin-top: 15rpx;
}

.note-item {
  display: flex;
  padding: 15rpx 20rpx 20rpx 20rpx;
  border: 1rpx solid #efefef;
  border-radius: 8rpx;
  margin: 20rpx;
  box-shadow: 1rpx 1rpx 15rpx #ddd;
}
.note-item-left {
  margin-right: 15rpx;
}

.note-image {
  width: 200rpx;
  height: 200rpx;
  display: block;
  border-radius: 20rpx;
}

.note-detail {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.note-title {
  font-size: 34rpx;
  font-weight: bold;
}

.note-tag {
  display: flex;
  height:42rpx;
  width: 130rpx;
  background-color:#f5f2f2;
  letter-spacing:2rpx;
  border-radius:25rpx;
  font-size:24rpx;
  color: #8a8a8a;
  padding: 2rpx 2rpx;
  justify-content:space-evenly;
  align-items:center;
}

.note-tag-food {
  background-color: rgb(252, 144, 74);
}

.note-tag-stratege{
  background-color: #1296db;
}

.note-tag-view {
  background-color: rgb(16, 161, 131);
}

.note-tag-tran {
  background-color: rgb(41, 204, 164);
}

.note-tag-lodge {
  background-color: rgb(191, 164, 115);
  color: rgb(190, 216, 254);
}

.note-tag-others {
  background-color: #bfbfbf;
}

.note-tag-image {
  height:32rpx;
  width: 32rpx;
  display: block;
}

.note-time {
  width: 220rpx;
  display: flex;
  font-size: 20rpx;
  justify-content: space-around;
  align-items: center;
  padding-top: 30rpx;
  color: #bfbfbf;
}

.note-item-right { 
  display: flex;
  flex-direction: column;
  font-size:24rpx;
  margin-left: auto;
  padding: 2rpx 4rpx;
  margin-right: 6rpx;
}

.dlt-dt-btn {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 88rpx;
}

.dlt-dt-btn l-icon {
  margin-right: 18rpx;
}


.note-status {
  display: flex;
  height:42rpx;
  width: fit-content;
  padding: 0 16rpx;
  letter-spacing:2rpx;
  background-color: #f5f2f2;
  border-radius:25rpx;
  margin-left: auto;
  margin-top: 10rpx;
  justify-content:center;
  align-items:center;
  font-weight: bolder;
}

.status1 {
 color: rgb(97, 159, 255);
}

.status2 {
  color: #ff0000;
}

.status3 {
  color: rgb(3, 184, 3);
}




