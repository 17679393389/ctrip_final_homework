/* travel_diary_miniprogram/pages/myDiary/myDiary.wxss */
.container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.empty-page {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.empty-page image {
  width: 128rpx;
  height: 128rpx;
}

.empty-text {
  margin: 20rpx 0rpx;
  font-size: 28rpx;
}


.note-item {
  display: flex;
  padding: 15rpx 0rpx 15rpx 15rpx;
  border: 1rpx solid #efefef;
  border-radius: 8rpx;
  margin: 15rpx;
  box-shadow: 1rpx 1rpx 15rpx #ddd;
}
.note-item-left {
  margin-right: 15rpx;
}

.note-image {
  width: 200rpx;
  height: 200rpx;
  display: block;
}

.note-detail {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.note-title {
  font-size: 34rpx;
  font-weight: bold;
}

.note-tag {
  display: flex;
  height:42rpx;
  width: 130rpx;
  background-color:#f5f2f2;
  letter-spacing:2rpx;
  border-radius:25rpx;
  font-size:24rpx;
  color: #8a8a8a;
  padding: 2rpx 2rpx;
  justify-content:space-evenly;
  align-items:center;
}

.note-tag-food {
  background-color: rgb(252, 144, 74);
}

.note-tag-stratege{
  background-color: #1296db;
}

.note-tag-view {
  background-color: rgb(16, 161, 131);
}

.note-tag-tran {
  background-color: rgb(41, 204, 164);
}

.note-tag-lodge {
  background-color: rgb(191, 164, 115);
  color: rgb(190, 216, 254);
}

.note-tag-others {
  background-color: #bfbfbf;
}

.note-tag-image {
  height:32rpx;
  width: 32rpx;
  display: block;
}

.note-time {
  width: 220rpx;
  display: flex;
  font-size: 20rpx;
  justify-content: space-around;
  align-items: center;
  padding-top: 30rpx;
  color: #bfbfbf;
}

.note-item-right { 
  margin-left: auto;
}

.note-status {
  display: flex;
  height:42rpx;
  width: auto;
  letter-spacing:2rpx;
  background-color: #f5f2f2;
  border-radius:25rpx;
  font-size:24rpx;
  padding: 2rpx 20rpx;
  margin-top: 10rpx;
  margin-right: 12rpx;
  justify-content:center;
  align-items:center;
  font-weight: bolder;
}

.status1 {
 color: rgb(97, 159, 255)
}

.status2 {
  color: #ff0000;
}

.status3 {
  color: rgb(3, 184, 3);
}
.movable-area{
  display: flex;
  height: 200rpx;
  /* left: -120rpx; */
  width: 100%;
}

