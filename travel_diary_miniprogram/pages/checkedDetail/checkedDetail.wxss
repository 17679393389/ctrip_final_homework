/* pages/checkedDetail/checkedDetail.wxss */
.ff{
  width: 100%;
  height: 350rpx;
}

swiper {
  height: 350rpx;
}

swiper image {
  width: 100%;
  height: 100%;
}
.content-item{
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 180rpx;
  padding: 10rpx;
  margin: 15rpx;
}
.content-item-left {
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  
}

.note-Title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  letter-spacing:2rpx;
}

.note-time {
  width: 220rpx;
  display: flex;
  font-size: 20rpx;
  justify-content: center;
  align-items: center;
  padding-top: 30rpx;
  color: #bfbfbf;
}

.content-item-right {
  padding-bottom: 36rpx;
}

.pass-image {
  width: 128rpx;
  height: 128rpx;
  display: block;

}

.note-tag {
  display: flex;
  height:42rpx;
  width: 130rpx;
  background-color:#f5f2f2;
  letter-spacing:2rpx;
  border-radius:25rpx;
  font-size:24rpx;
  padding: 2rpx 2rpx;
  justify-content:space-evenly;
  align-items:center;
}


.note-tag-food {
  background-color: rgb(252, 144, 74);
}

.note-tag-stratege{
  background-color: #1296db;
}

.note-tag-view {
  background-color: rgb(16, 161, 131);
}

.note-tag-tran {
  background-color: rgb(41, 204, 164);
}

.note-tag-lodge {
  background-color: rgb(191, 164, 115);
  /* color: rgb(190, 216, 254); */
}

.note-tag-others {
  background-color: #bfbfbf;
}

.note-tag-image {
  height:32rpx;
  width: 32rpx;
  display: block;
}

.footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  padding-bottom: 50rpx;
}

.info {
  position: relative;
  top: -70rpx;
  margin: 0rpx 32rpx;
  padding: 80rpx 20rpx 30rpx 20rpx;
  border: 4rpx solid #ffb034;
  z-index: -2;
  letter-spacing: 1rpx;
}


.container-detail {
  width: 100%;
}



.note-content {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.titBar {
  position: relative;
  width: 50%;
  margin: 15rpx;
  padding-left: 15rpx;
  /* border:1rpx solid #000; */
}
.tImg {
  width: 100%;
  margin-left: 15rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}


.titName {
  font-size: 34rpx;
  color: #fff;
  line-height: 58rpx;
  letter-spacing:4rpx;
  padding: 26rpx;
  width: auto;
}